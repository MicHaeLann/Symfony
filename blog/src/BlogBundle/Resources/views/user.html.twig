{% extends 'BlogBundle:Default:index.html.twig' %}

{% block nav %}
	<nav class="blog-nav">
		{% for nav in navs %}
			<a class="blog-nav-item" href="{{nav.url}}">{{nav.title}}</a>
		{% endfor %}		
	</nav>
{% endblock %}

{% block header %}
	<h1 class="blog-title">{{title}}</h1>
{% endblock %}

{% block body %}
	<div class="col-sm-8 blog-main">
		{{form_start(form)}}
		{{form_widget(form)}}
		{{form_end(form)}}
    </div>
{% endblock %}