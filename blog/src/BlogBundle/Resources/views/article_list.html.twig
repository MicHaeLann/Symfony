{% extends 'BlogBundle:Default:index.html.twig' %}

{% block nav %}
	<nav class="blog-nav">
		{% for nav in navs %}
			{% if nav.title == 'Article' %}
				<a class="blog-nav-item active" href="{{nav.url}}">{{nav.title}}</a>
			{% else %}
				<a class="blog-nav-item" href="{{nav.url}}">{{nav.title}}</a>
			{% endif %}
		{% endfor %}    
	</nav>
{% endblock %}

{% block header %}
	<h1 class="blog-title">{{title}}</h1>
{% endblock %}

{% block body %}
	<div class="col-sm-8 blog-main">
		<a class='btn btn-default' href='{{nav_create.url}}'>{{nav_create.title}}</a> 
		{% for article in articles %}
			<div class="blog-post">
				<h2 class="blog-post-title">{{article.title}}</h2>
				<p class="blog-post-meta">{{article.createDate|date('F j, o g:i a') }}</p>
				<p>{{article.content}}</p>
				<div class="blog-post-more">
					<a class="blog-post-more" href="{{article.navView}}">More>></a>
				</div>
			</div><!-- /.blog-post -->
		{% endfor %}
		{% if articles %}
			<nav>
				<ul class="pager">
				<li><a href="#">Previous</a></li>
				<li><a href="#">Next</a></li>
				</ul>
			</nav>
		{% endif %}
	</div>
{% endblock %}

{% block sidebar %}
	<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
		<div class="sidebar-module">
			<h4>Archives</h4>
			<ol class="list-unstyled">
				{% for category in categories %}
					<li><a href="{{category.navView}}">{{category.name}}</a></li>
				{% endfor %}
			</ol>
		</div>
		<div class="sidebar-module">
			<h4>Elsewhere</h4>
			<ol class="list-unstyled">
				<li><a href="#">GitHub</a></li>
				<li><a href="#">Twitter</a></li>
				<li><a href="#">Facebook</a></li>
			</ol>
		</div>
	</div><!-- /.blog-sidebar -->
{% endblock %}